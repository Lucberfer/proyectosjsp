<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/proyectos</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Hibernate dialect for MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Show SQL queries in console (for debugging) -->
        <property name="hibernate.show_sql">true</property>

        <!-- Automatically create/update database schema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Entity mappings -->
        <mapping class="com.mycompany.proyectosjsp.models.Proyecto"/>
        <mapping class="com.mycompany.proyectosjsp.models.Tarea"/>
        <mapping class="com.mycompany.proyectosjsp.models.Usuario"/>
    </session-factory>
</hibernate-configuration>
