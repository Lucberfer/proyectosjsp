<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/proyectos</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Hibernate dialect for MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Show formatted SQL queries in console (useful for debugging) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Automatically create/update database schema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Fix potential timezone issues -->
        <property name="hibernate.jdbc.time_zone">UTC</property>

        <!-- Entity mappings -->
        <mapping class="com.mycompany.proyectosjsp.models.Proyecto"/>
        <mapping class="com.mycompany.proyectosjsp.models.Tarea"/>
    </session-factory>
</hibernate-configuration>
